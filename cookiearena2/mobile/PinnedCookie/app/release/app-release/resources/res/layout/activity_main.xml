<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="30dp" app:cardCornerRadius="30dp" app:cardElevation="20dp">
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:padding="24dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="36sp" android:textStyle="bold" android:id="@+id/loginText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Pinned Cookie" android:textAlignment="center"/>
            <EditText android:textColor="@color/black" android:id="@+id/username" android:padding="8dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="40dp" android:hint="Username" android:drawablePadding="8dp"/>
            <EditText android:textColor="@color/black" android:id="@+id/password" android:padding="8dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="20dp" android:hint="Password" android:drawablePadding="8dp" android:inputType="textPassword"/>
            <Button android:textSize="18sp" android:id="@+id/loginButton" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="30dp" android:text="Login" app:cornerRadius="20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
